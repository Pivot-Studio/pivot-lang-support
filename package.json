{
  "name": "pivot-lang-support",
  "displayName": "pivot-lang support",
  "description": "",
  "version": "0.0.1",
  "engines": {
    "vscode": "^1.71.0"
  },
  "categories": [
    "Programming Languages"
  ],
  "activationEvents": [
		"onLanguage:pivot-lang"
	],
  "icon": "logo.png",
  "main": "./out/extension",
  "contributes": {
		"snippets": [
			{
				"language": "pivot-lang",
				"path": "./snippets.json"
			}
		],
    "languages": [{
      "id": "pivot-lang",
      "aliases": ["plang"],
      "extensions": [".pi",".piv"],
      "configuration": "./language-configuration.json",
      "icon": {
        "light": "./logo_white.svg",
        "dark": "./logo_dark.svg"
      }
    }],
    "grammars": [{
      "language": "pivot-lang",
      "scopeName": "source.pivot-lang",
      "path": "./syntaxes/pivot-lang.tmLanguage.json"
    }]
  },
  "dependencies": {
		"vscode-languageclient": "^7.0.0"
	},
  "scripts": {
		"vscode:prepublish": "npm run compile ",
		"compile": "tsc -b",
		"watch": "tsc -b -w",
		"lint": "eslint ./client/src --ext .ts,.tsx"
	},
	"devDependencies": {
		"@types/mocha": "^9.1.0",
		"@types/node": "^14.17.0",
		"@typescript-eslint/eslint-plugin": "^5.13.0",
		"@typescript-eslint/parser": "^5.13.0",
		"eslint": "^8.10.0",
		"mocha": "^9.2.1",
		"typescript": "^4.6.2",
    "@types/vscode": "^1.63.0",
		"@vscode/test-electron": "^2.1.2"
	}
}
